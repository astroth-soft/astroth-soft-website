---
import "@unocss/reset/sanitize/sanitize.css";
import "@unocss/reset/sanitize/assets.css";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SmoothScroll from "../components/SmoothScroll.astro";
import { type MarkdownInstance } from "astro";
import Heading from "../components/Heading.astro";

interface Props {
  post: MarkdownInstance<MarkdownInstance<any>>;
  pageTitle: string;
}

const { post, pageTitle } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/assets/astroth_logo.png" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle} | Astroth</title>
  </head>
  <body class="bg-black text-white font-ibm m-0 p-0">
    <SmoothScroll>
      <Header />
      <Heading text="NEWS" />
      <div
        class="mx-auto w-60% bg-dark-4 px-16 py-4 mt-8 border-y-1 border-x-0 border-dark-1 border-style-solid"
      >
        <slot />
      </div>
      <Footer />
    </SmoothScroll>
  </body>
</html>
