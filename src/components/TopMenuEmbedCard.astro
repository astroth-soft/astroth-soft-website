---
export interface Props {
    title: string;
    subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<!-- Content -->
<div
    class="bg-[#21252e] flex flex-col justify-center items-center h-full text-center p-2"
>
    <!-- Title -->
    <h2 class="text-4xl md:text-5xl font-bold text-white mb-1 font-outfit">
        {title}
    </h2>

    <!-- Subtitle -->
    <p class="text-xl md:text-2xl text-white/90 font-medium">
        {subtitle}
    </p>

    <slot />
</div>
